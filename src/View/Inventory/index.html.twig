{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row">
        {% for egg in eggs %}
            <div class="card {{ egg.rarity }}" style="width: 18rem;">
                <img src="{{ egg.image }}" class="card-img-top" alt="{{ egg.name }}">
                <div class="card-body">
                    <h5 class="card-title">{{ egg.name }}</h5>
                    <a href="/invent/tradeToGold/{{ egg.rarity }}/{{ egg.userEggId }}" class="btn btn-primary">{{ egg.price }} golds</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}