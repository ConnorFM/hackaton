{% extends 'Admin/layout_admin.html.twig' %}



{% block content %}
    <div class="container-fluid player">
        <h1>Player connection</h1>
        <div id="contenu" class="row">


            <div class="col-lg-12 user">
                <div class="container">
                    <form class="form-group" method="post">

                        <h2>Sign Up</h2><br/>

                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
                            {{ error.firstname }}
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>

                        </div>

                        <div class="form-group">
                            <label for="password">Confirm your password</label>
                            <input type="password" class="form-control" id="password_conf" name="password_conf" placeholder="Password" required>
                            {{ error.password }}
                        </div>

                        <div>
                            <button type="submit" class="btn btn-primary">Sign up</button>
                            {{ success }}
                        </div>

                        <div>
                            <br/>
                            <br/>
                            <p>Please sign in if you have an account</p>
                            <a href="signin" type="button" class="btn btn-primary">Sign in</a>
                        </div>

                    </form>
                </div>
            </div>


        </div>
    </div>




</body>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
